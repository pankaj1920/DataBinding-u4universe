<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.example.databindingu4universe.fragment_databinding.observables_in_data_binding.observable_arraylist.ObservableArrayListActivity" />

        <variable
            name="data"
            type="androidx.databinding.ObservableArrayList&lt;String>" />

        <variable
            name="mapData"
            type="androidx.databinding.ObservableArrayMap&lt;String,Object>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment_databinding.observables_in_data_binding.ObservableDataBindingActivity">

        <!--  In  ArrayList =>    android:text="@{data.get(0),default = `Hamza`}"-->
        <!--
            In ArrayMap  android:text="@{String.valueOf(mapData.get(`name`)),default = `Hamza`}"
            here we are wrapping in String bcz here return type of value is object
            androidx.databinding.ObservableArrayMap&lt;String,Object>
        -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@{String.valueOf(mapData.get(`name`)),default = `Hamza`}"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--      for array List  android:text="@{data[1],default = `40`}"-->
        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@{String.valueOf(mapData.get(`age`)),default = `40`}"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <Button
            android:id="@+id/btn_click_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="@{handler::onClick}"
            android:text="Click Me!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>